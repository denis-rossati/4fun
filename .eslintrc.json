{
  "env": {
    "browser": true,
    "es2021": true,
    "commonjs": true,
    "jest": true
  },
  "extends": [
    "airbnb-base"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint",
    "import"
  ],
  "rules": {
    "import/extensions": 0,
    "import/no-unresolved": [
      0,
      {
        "typescript": {
          "alwaysTryTypes": true
        }
      }
    ],
    "no-loop-func": 0
  }
}
